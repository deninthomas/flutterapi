# Environment Variables Example

# Application Port
PORT=5000

# MongoDB Connection String
# Example: mongodb+srv://<username>:<password>@cluster.mongodb.net/<dbname>
DB_CONNECTION_STRING=mongodb+srv://polkapol63_db_user:polkapol63_db_user@cluster0.g5wgfqf.mongodb.net/?appName=Cluster0

